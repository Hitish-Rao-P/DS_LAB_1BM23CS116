
char* removeDigit(char* number, char digit) {
    int n = strlen(number);
    
    for (int i = 0; i < n - 1; i++) {
        if (number[i] == digit && number[i] < number[i + 1]) {
            for (int j = i; j < n; j++) {
                number[j] = number[j + 1];
            }
            return number; 
        }
    }

    for (int i = n - 1; i >= 0; i--) {
        if (number[i] == digit) {
            for (int j = i; j < n; j++) {
                number[j] = number[j + 1];
            }
            break;
        }
    }

    return number;
}
